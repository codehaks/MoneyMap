@page
@model MoneyMap.Web.Areas.Users.Pages.Expenses.IndexModel
@{
    ViewBag.Title = "Expenses";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Expenses</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-page="./Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i>
            Add New Expense
        </a>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="CategoryId" class="form-label">Category</label>
                        <select asp-for="CategoryId" class="form-select" asp-items="@Model.CategorySelectList">
                            <option value="">All Categories</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="SearchTerm" class="form-label">Search</label>
                        <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search notes..." />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">&nbsp;</label>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search me-1"></i>
                            Filter Results
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="table-responsive expense-table">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Note</th>

                <th>Amount</th>
                <th>Category</th>
                <th>Date</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model.ExpenseList)
            {
                <tr>
                    <td>@expense.Note</td>
                    <td class="fw-bold">$@expense.Amount.ToString("F2")</td>
                
                    <td>
                        <span class="badge bg-primary rounded-pill px-3 py-2">@expense.Category.Name</span>
                    </td>
                    <td>@expense.Date.ToShortDateString()</td>
                  
                    <td class="action-buttons">
                        <div class="d-flex gap-2">
                            <a asp-page="./Edit" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <form method="post" asp-page-handler="delete" class="d-inline">
                                <input type="hidden" name="id" value="@expense.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this expense?');">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.ExpenseList.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-receipt text-muted mb-3" style="font-size: 64px;"></i>
        <h4 class="text-muted">No expenses found</h4>
        <p class="lead">Start tracking your expenses by adding a new one.</p>
        <a asp-page="./Create" class="btn btn-primary mt-3">Add Your First Expense</a>
    </div>
}

@section scripts {
    <script>
        // You can add any JavaScript functionality here if needed
    </script>
}

