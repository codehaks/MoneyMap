@page
@model MoneyMap.Web.Areas.Admin.Pages.Users.DetailsModel
@{
    ViewBag.Title = "User Details";
}

<div class="pb-2 mb-3">
    <div class="d-flex align-items-center mb-3">
        <a asp-page="./Index" class="btn btn-sm btn-outline-secondary me-2">
            <i class="fas fa-arrow-left"></i>
            Back to Users
        </a>
        <h1 class="h3 mb-0 ms-2">User Details</h1>
    </div>
</div>

<div class="row">
    @if (Model.UserDetails != null)
    {
        <div class="col-md-6">
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h3 class="h5 card-title mb-0">User Information</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Username</dt>
                        <dd class="col-sm-9">@Model.UserDetails.UserName</dd>
                        
                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.UserDetails.Email</dd>
                        
                        <dt class="col-sm-3">Email Confirmed</dt>
                        <dd class="col-sm-9">
                            @if (Model.UserDetails.EmailConfirmed)
                            {
                                <span class="badge text-bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge text-bg-warning">No</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    }
    
    <div class="col-md-6">
        <div class="card mb-4 shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="h5 card-title mb-0">Roles</h3>
                <button class="btn btn-sm btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                    </svg>
                    Add Role
                </button>
            </div>
            <div class="card-body">
                @if (Model.Roles.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var role in Model.Roles)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span class="badge text-bg-info">@role</span>
                                <button class="btn btn-sm btn-outline-danger">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                                    </svg>
                                    Remove
                                </button>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="alert alert-info">This user has no assigned roles.</div>
                }
            </div>
        </div>
    </div>
</div>