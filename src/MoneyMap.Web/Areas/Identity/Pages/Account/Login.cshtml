@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section Styles {
    <link rel="stylesheet" href="~/css/identity.css" />
}

<div class="identity-page">
    <main class="form-identity w-100 m-auto">
        <form id="account" method="post">
            <img class="identity-logo mb-4" src="~/bootstrap-5.3.7-examples/assets/brand/bootstrap-logo.svg" alt="MoneyMap Logo" />
            <h1 class="h3 mb-3 fw-normal text-center">@ViewData["Title"]</h1>
            
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            
            <div class="form-check text-start my-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            
            <button id="login-submit" type="submit" class="btn btn-primary w-100 py-2">Log in</button>
            
            <div class="identity-links">
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a> •
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a> •
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend confirmation</a>
            </div>
            
            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="external-auth">
                    <h5 class="text-center mb-3">Or sign in with</h5>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                        }
                    </form>
                </div>
            }
            
            <p class="mt-5 mb-3 text-body-secondary text-center">&copy; MoneyMap @DateTime.Now.Year</p>
        </form>
    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
