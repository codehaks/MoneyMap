@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

@section Styles {
    <link rel="stylesheet" href="~/css/identity.css" />
}

<div class="identity-page">
    <main class="form-identity w-100 m-auto">
        <form method="post">
            <img class="identity-logo mb-4" src="~/bootstrap-5.3.7-examples/assets/brand/bootstrap-logo.svg" alt="MoneyMap Logo" />
            <h1 class="h3 mb-3 fw-normal text-center">@ViewData["Title"]</h1>
            
            <p class="text-center mb-3">Enter your new password</p>
            
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />
            
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control password" autocomplete="new-password" aria-required="true" placeholder="Please enter your password." />
                <label asp-for="Input.Password">New Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control confirm-password" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password." />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary w-100 py-2 mt-3">Reset Password</button>
            
            <div class="identity-links">
                <a asp-page="./Login">Back to login</a>
            </div>
            
            <p class="mt-5 mb-3 text-body-secondary text-center">&copy; MoneyMap @DateTime.Now.Year</p>
        </form>
    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
