@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <link rel="stylesheet" href="~/css/identity.css" />
}

<div class="identity-page">
    <main class="form-identity w-100 m-auto">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <img class="identity-logo mb-4" src="~/bootstrap-5.3.7-examples/assets/brand/bootstrap-logo.svg" alt="MoneyMap Logo" />
            <h1 class="h3 mb-3 fw-normal text-center">@ViewData["Title"]</h1>
            
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control password" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control confirm-password" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
            <button id="registerSubmit" type="submit" class="btn btn-primary w-100 py-2 mt-3">Register</button>
            
            <div class="identity-links">
                <a asp-page="./Login">Already have an account? Sign in</a>
            </div>
            
            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="external-auth">
                    <h5 class="text-center mb-3">Or register with</h5>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name" title="Register using your @provider.DisplayName account">@provider.DisplayName</button>
                        }
                    </form>
                </div>
            }
            
            <p class="mt-5 mb-3 text-body-secondary text-center">&copy; MoneyMap @DateTime.Now.Year</p>
        </form>
    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
