@page "/contactus"
@model MoneyMap.Web.Pages.AboutModel

@{
    Layout = "_LayoutUser";
}

<div class="hero-section text-center py-5">
    <div class="container">
        <h1 class="display-4 fw-bold text-primary mb-4">About MoneyMap</h1>
        <p class="lead mb-4">Your trusted partner in personal finance management</p>
    </div>
</div>

<div class="container py-5">
    <div class="row g-5">
        <div class="col-lg-8">
            <h2 class="fw-bold mb-4">Our Mission</h2>
            <p class="lead mb-4">
                At MoneyMap, we believe that financial freedom starts with understanding your spending habits. 
                Our mission is to provide you with the tools and insights you need to take control of your finances.
            </p>
            
            <div class="row g-4 mb-5">
                <div class="col-md-6">
                    <div class="d-flex align-items-start">
                        <div class="flex-shrink-0">
                            <i class="fas fa-bullseye text-primary fs-4"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5>Clear Goals</h5>
                            <p class="text-muted">Set and track your financial goals with our intuitive interface.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-start">
                        <div class="flex-shrink-0">
                            <i class="fas fa-chart-bar text-success fs-4"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5>Smart Analytics</h5>
                            <p class="text-muted">Get detailed insights into your spending patterns and trends.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-start">
                        <div class="flex-shrink-0">
                            <i class="fas fa-lock text-info fs-4"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5>Secure Data</h5>
                            <p class="text-muted">Your financial information is protected with enterprise-grade security.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-start">
                        <div class="flex-shrink-0">
                            <i class="fas fa-mobile-alt text-warning fs-4"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5>Always Accessible</h5>
                            <p class="text-muted">Access your finances from any device, anywhere, anytime.</p>
                        </div>
                    </div>
                </div>
            </div>

            <h2 class="fw-bold mb-4">Our Story</h2>
            <p class="mb-4">
                MoneyMap was born from a simple observation: managing personal finances shouldn't be complicated. 
                We started with a vision to create a tool that would make financial tracking as simple as possible 
                while providing powerful insights that help users make better financial decisions.
            </p>
            <p class="mb-4">
                Today, MoneyMap serves thousands of users who trust us with their financial data. 
                We continue to innovate and improve our platform based on user feedback and the latest 
                financial management best practices.
            </p>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h4 class="card-title fw-bold mb-4">Get in Touch</h4>
                    <div class="mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-envelope text-primary me-3"></i>
                            <div>
                                <strong>Email</strong><br>
                                <span class="text-muted">support@moneymap.com</span>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-phone text-primary me-3"></i>
                            <div>
                                <strong>Phone</strong><br>
                                <span class="text-muted">+1 (555) 123-4567</span>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-map-marker-alt text-primary me-3"></i>
                            <div>
                                <strong>Address</strong><br>
                                <span class="text-muted">123 Finance Street<br>Money City, MC 12345</span>
                            </div>
                        </div>
                    </div>
                    <a href="mailto:support@moneymap.com" class="btn btn-primary w-100">Contact Us</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="bg-light py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="d-flex flex-column align-items-center">
                    <i class="fas fa-users text-primary mb-3" style="font-size: 3rem;"></i>
                    <h3 class="fw-bold">1000+</h3>
                    <p class="text-muted">Active Users</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="d-flex flex-column align-items-center">
                    <i class="fas fa-chart-line text-success mb-3" style="font-size: 3rem;"></i>
                    <h3 class="fw-bold">$2M+</h3>
                    <p class="text-muted">Expenses Tracked</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="d-flex flex-column align-items-center">
                    <i class="fas fa-star text-warning mb-3" style="font-size: 3rem;"></i>
                    <h3 class="fw-bold">4.8/5</h3>
                    <p class="text-muted">User Rating</p>
                </div>
            </div>
        </div>
    </div>
</div>