@page
@model MoneyMap.Web.Pages.IndexModel
@{
    ViewBag.Title = "Home";
}

<!-- Hero Section -->
<section class="hero-section text-center text-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 fade-in">
                <h1 class="display-4 fw-bold mb-4">Smart Money Management</h1>
                <p class="lead mb-5">Take control of your finances with our intuitive and powerful expense tracking solution</p>
                <div class="d-flex justify-content-center gap-3 mb-4">
                    <a asp-area="Users" asp-page="/Expenses/Index" class="btn btn-light btn-lg px-4 me-md-2">Start Tracking</a>
                    <a asp-page="/About" class="btn btn-outline-light btn-lg px-4">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-white">
    <div class="container py-5">
        <div class="row text-center mb-5">
            <div class="col-lg-8 mx-auto">
                <h2 class="fw-bold section-title">Simplify Your Finances</h2>
                <p class="lead text-muted">Our platform helps you track, analyze, and optimize your spending habits</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card card h-100 p-4 text-center">
                    <div class="card-body">
                        <i class="fas fa-chart-line feature-icon"></i>
                        <h4 class="card-title mb-3">Track Expenses</h4>
                        <p class="card-text text-muted">Easily record and categorize your daily expenses to understand your spending patterns.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card card h-100 p-4 text-center">
                    <div class="card-body">
                        <i class="fas fa-chart-pie feature-icon"></i>
                        <h4 class="card-title mb-3">Visual Insights</h4>
                        <p class="card-text text-muted">Get clear visual representations of your spending habits with intuitive charts and reports.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card card h-100 p-4 text-center">
                    <div class="card-body">
                        <i class="fas fa-shield-alt feature-icon"></i>
                        <h4 class="card-title mb-3">Secure & Private</h4>
                        <p class="card-text text-muted">Your financial data is protected with secure authentication and private storage.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="py-5 bg-light">
    <div class="container py-5">
        <div class="row text-center mb-5">
            <div class="col-lg-8 mx-auto">
                <h2 class="fw-bold section-title">How It Works</h2>
                <p class="lead text-muted">Three simple steps to financial clarity</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 text-center mb-4 mb-md-0">
                <div class="rounded-circle bg-white p-4 d-inline-flex justify-content-center align-items-center mb-4" style="width: 100px; height: 100px; box-shadow: 0 5px 15px rgba(0,0,0,0.08);">
                    <span class="h1 fw-bold text-primary mb-0">1</span>
                </div>
                <h4 class="mb-3">Track Expenses</h4>
                <p class="text-muted">Log your daily expenses with our simple and intuitive interface</p>
            </div>
            <div class="col-md-4 text-center mb-4 mb-md-0">
                <div class="rounded-circle bg-white p-4 d-inline-flex justify-content-center align-items-center mb-4" style="width: 100px; height: 100px; box-shadow: 0 5px 15px rgba(0,0,0,0.08);">
                    <span class="h1 fw-bold text-primary mb-0">2</span>
                </div>
                <h4 class="mb-3">Analyze Patterns</h4>
                <p class="text-muted">Discover insights about your spending habits through detailed reports</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="rounded-circle bg-white p-4 d-inline-flex justify-content-center align-items-center mb-4" style="width: 100px; height: 100px; box-shadow: 0 5px 15px rgba(0,0,0,0.08);">
                    <span class="h1 fw-bold text-primary mb-0">3</span>
                </div>
                <h4 class="mb-3">Optimize Budget</h4>
                <p class="text-muted">Make informed decisions to improve your financial health</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 bg-white">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h2 class="fw-bold mb-4">Ready to take control of your finances?</h2>
                <p class="lead mb-4">Join thousands of users who have transformed their financial habits with MoneyMap.</p>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary me-2">Sign Up Free</a>
                <a asp-page="/About" class="btn btn-outline-primary">Learn More</a>
            </div>
            <div class="col-lg-6 text-center">
                <img src="https://placehold.co/600x400/3a86ff/ffffff?text=Financial+Freedom" alt="Financial Freedom" class="img-fluid rounded-3 shadow" style="max-width: 90%;">
            </div>
        </div>
    </div>
</section>

@if (Model.IsNewYear)
{
    <div class="bg-light py-4">
        <div class="container text-center">
            <div class="alert alert-primary d-inline-block shadow-sm">
                <h6 class="mb-2">🎉 New Year Countdown</h6>
                <p class="mb-0">
                    <strong>@Model.DaysLeft</strong> days left until 2026
                    @if (Model.DaysLeft < 11)
                    {
                        <span class="text-danger ms-2">⏰ Time is running out!</span>
                    }
                </p>
            </div>
        </div>
    </div>
}




